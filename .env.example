# Azure OpenAI
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your_key
AZURE_OPENAI_DEPLOYMENT=gpt-4
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-ada-002

# Azure AD (Microsoft Graph)
# Register an app at https://portal.azure.com > Azure Active Directory > App registrations
# Set redirect URI to: http://localhost:8000/auth/callback (or your domain)
# Required API permissions (delegated): User.Read, Mail.Read, Calendars.Read, Chat.Read, Files.Read.All, OnlineMeetings.Read
AZURE_CLIENT_ID=your_app_client_id
AZURE_CLIENT_SECRET=your_app_client_secret
AZURE_TENANT_ID=your_tenant_id

# Memory (Qdrant) - use "qdrant" as host when running in Docker
QDRANT_HOST=localhost
QDRANT_PORT=6333

# Harvest (optional)
# Get your Personal Access Token from: https://id.getharvest.com/developers
# Your Account ID is shown on the same page
HARVEST_ACCOUNT_ID=
HARVEST_ACCESS_TOKEN=

# App
APP_SECRET_KEY=generate_a_random_secret_key_here
APP_BASE_URL=http://localhost:8000
DATA_DIR=.

# Scheduler (optional - defaults shown)
# Set to false to disable automatic agent runs
SCHEDULER_ENABLED=true
# Cron format schedules
BRIEFING_SCHEDULE=0 7 * * *
ACTION_ITEM_SCHEDULE=0 */2 * * *
MEMORY_SCHEDULE=0 * * * *
ANOMALY_SCHEDULE=0 */4 * * *
